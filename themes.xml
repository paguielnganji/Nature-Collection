<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="https://schemas.android.com/tools">
    <!-- Base application  theme. -->
    <style name="Theme.NatureCollection" parent="android:Theme.Material.Light.NoActionBar" >
    <!--Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorPrimary">@color/White</item>

    <!--Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorSecondary">@color/black</item>

    <!-- Status  bar color. -->
    <item name="android:statusBarColor" tools:targetApi="I">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    </style>

    <!-- Creer le composant titre par default -->
    <style name="DefaultNameStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/Kanit</item>
    </style>

    <!-- Creer le composant sous titre par default -->
    <style name="DefaultTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Creer le composant titre par default -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
            <item name="android:textSize">24sp</item>
    </style>


</resources>
